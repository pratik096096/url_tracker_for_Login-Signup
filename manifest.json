{
    "manifest_version": 3,
    "name": "Login Tracker",
    "version": "1.0",
    "permissions": ["activeTab", "storage", "webNavigation", "scripting", "tabs"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
         "default_title": "Login Tracker"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": [
        "http://localhost:5000/*",
        "https://*/*",
        "http://*/*"
    ]
}
